<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/background_dark</item>
        <item name="colorPrimaryDark">@color/PathwaysBlue</item>
        <item name="colorAccent">@color/PathwaysGold</item>
        <item name="android:colorBackground">@color/PathwaysBlue</item>
        <item name="android:textColorPrimary">@android:color/background_light</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashlogo</item>
    </style>

    <style name="ProfileTheme" parent="AppTheme" >
        <item name="android:colorBackground">@color/PathwaysBlue</item>
        <item name="colorPrimary">@android:color/black</item>
    </style>

    <style name="MainPageTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/PathwaysBlue</item>
        <item name="android:colorBackground">@color/PathwaysBlue</item>
        <item name="colorAccent">@color/PathwaysGold</item>
    </style>


</resources>
